/**index.wxss**/
.temperature{
  font-size:100rpx;
  margin-top: 100rpx;
  text-align:center; 
}
.weather{
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}


.weather-wrapper{
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 260rpx;
}

.location-wrapper{
  margin-bottom: 60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)!important;
  border: none!important;
  padding: 0!important;
}

.location{
  display: flex;
  justify-content: center;
  align-items: center;
}

.location-icon{
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx;
}

.location-tips{
  margin-top:10rpx;
  text-align: center;
}

.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.day-weather {
  display: flex;
  align-items: center;
  position: absolute;
  bottom:0;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)
}

.temp-text {
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: right;
}

.arrow-icon {
  width: 13rpx;
  height: 24rpx;
}

.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx 0;
}

.timetips-icon {
  margin-right: 10rpx;
  width: 36rpx;
  height: 28rpx;
}

.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
  margin-bottom: 20rpx;
}

.forecast-list{
  display: flex;
  flex-direction: row;
  
}
.forecast-item{
  display: flex;
  flex-shrink: 0;
  flex-direction: column;
  align-items: center;
  width:120rpx;
 
}

.forecast-weather{
  width:90rpx;
  height: 90rpx;
  margin: 30rpx 0;
}
